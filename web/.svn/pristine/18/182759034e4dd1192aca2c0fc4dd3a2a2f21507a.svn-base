<script>
  import { onMount } from "svelte";
  import { fetchData } from "$lib/common";
  import { selectedMenuSeq, selectedMenuSubSeq } from "$lib/stores/menu"

  let mainSeq = 0; // mainSeq 값
  let subSeq = 0; // subSeq 값
  let categorySeq = 99; // categorySeq 값
  /**
     * @type {any[]}
     */
  let list = [];

  selectedMenuSeq.subscribe(value => {
    mainSeq = value;
  });
  selectedMenuSubSeq.subscribe(value => {
    subSeq = value;
  });


  onMount(async () => {
    console.log(mainSeq)
    console.log(subSeq)
    console.log(categorySeq)
    const data = await fetchData(
      `/home/getBoardList/${mainSeq}/${subSeq}/${categorySeq}`,
      ""
    );
    list = data;
    console.log(list)
  });
</script>
